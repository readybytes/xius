<?xml version="1.0" encoding="utf-8"?>
<config>
	<params addpath="/components/com_xius/elements" >
		<param name="@spacer" type="spacer" default="Google API Configuration " description="" />
			<param name="xius_proximity_country" type="info" default="-1"  label="COM_XIUS_COUNTRY_LABEL" description="COM_XIUS_COUNTRY_DESC"/>
			<param name="xius_proximity_zipcode" type="info" default="-1"  label="COM_XIUS_ZIPCODE_LABEL" description="COM_XIUS_ZIPCODE_DESC" addnone="true"/>
			<param name="xius_proximity_state" type="info" default="-1"  label="COM_XIUS_STATE_LABEL" description="COM_XIUS_STATE_DESC" />
			<param name="xius_proximity_city" type="info" default="-1"  label="COM_XIUS_CITY_LABEL" description="COM_XIUS_CITY_DESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		
		<param name="@spacer" type="spacer" default="If you don't have Geocoding Table" label="" description="" />
			<param name="xius_gmap_key" type="text" default="" label="COM_XIUS_GOOGLE_API_KEY_LABEL" description="COM_XIUS_GOOGLE_API_KEY_DESC"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="@spacer" type="spacer" default="Default Location Configuration" description="" />
			<param name="xius_default_location" type="radio" label="COM_XIUS_XIUS_PROXIMITY_LOCATION_LABLE" description="COM_XIUS_LOCATION_DES" default="none" >	
				<option value="none">None</option>				
				<option value="googlemap">Google Map</option>
				<option value="addressbox">Address</option>
				<option value="mylocation">My Location</option>
			</param>	
			<param name="xiusProximityDefaultLat" type="text" default="28.635308" label="COM_XIUS_DEFAULT_GOOGLE_MAP_LATITUDE_FOR_PROXIMITY_SEARCH_LABEL" description="COM_XIUS_DEFAULT_GOOGLE_MAP_LATITUDE_FOR_PROXIMITY_SEARCH_DESC" />
			<param name="xiusProximityDefaultLong" type="text" default="77.22496" label="COM_XIUS_DEFAULT_GOOGLE_MAP_LONGITUDE_FOR_PROXIMITY_SEARCH_LABEL" description="COM_XIUS_DEFAULT_GOOGLE_MAP_LONGITUDE_FOR_PROXIMITY_SEARCH_DESC" />						
			<param name="xiusDefaultDistance" type="text" label="COM_XIUS_XIUS_PROXIMITY_DEFAULT_DISTANCE_LABLE" description="COM_XIUS_DISTANCE_DES" default="10" />		
			<param name="xiusDefaultDistanceUnit" type="list" label="COM_XIUS_XIUS_PROXIMITY_DEFAULT_DISTANCE_UNIT_LABLE" description="COM_XIUS_DISTANCE_UNIT_DES" >	
				<option value="miles">Miles</option>				
				<option value="kms">Kms</option>
			</param>
			<param name="xiusProximityGmapZoom" type="list" >
				<option value="2">2</option>
				<option value="4">4</option>
				<option value="6">6</option>
				<option value="8">8</option>
				<option value="10">10</option>
				<option value="12">12</option>
				<option value="14">14</option>
				<option value="16">16</option>
				<option value="18">18</option>
				<option value="20">20</option>				
			</param>		 
	</params>
</config>