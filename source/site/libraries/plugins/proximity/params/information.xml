<?xml version="1.0" encoding="utf-8"?>
<config>
	<params addpath="/components/com_xius/elements" >
		<param name="@spacer" type="spacer" default="Select Information of Latitude and Longitude" label="" description="" />
			<param name="xius_proximity_latitude" type="info" default="0"  label="LATITUDE.LABEL" description="LATITUDE.DESC" />
			<param name="xius_proximity_longitude" type="info" default="0"  label="LONGITUDE.LABEL" description="LONGITUDE.DESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
			
		<param name="@spacer" type="spacer" default="Default Location Configuration" description="" />
			<param name="xius_default_location" type="Radio" label="XIUS PROXIMITY LOCATION.LABLE" description="LOCATION.DES" default="none" >	
				<option value="none">none</option>				
				<option value="googlemap">Google Map</option>
				<option value="addressbox">Address</option>
				<option value="mylocation">My Location</option>
			</param>			
			<param name="xiusProximityDefaultLat" type="text" default="28.635308" label="DEFAULT GOOGLE MAP LATITUDE FOR PROXIMITY SEARCH.LABEL" description="DEFAULT GOOGLE MAP LATITUDE FOR PROXIMITY SEARCH.DESC" />
			<param name="xiusProximityDefaultLong" type="text" default="77.22496" label="DEFAULT GOOGLE MAP LONGITUDE FOR PROXIMITY SEARCH.LABEL" description="DEFAULT GOOGLE MAP LONGITUDE FOR PROXIMITY SEARCH.DESC" />
			<param name="xiusDefaultDistance" type="text" label="XIUS PROXIMITY DEFAULT DISTANCE.LABLE" description="DISTANCE.DES" default="10" />		
			<param name="xiusDefaultDistanceUnit" type="list" label="XIUS PROXIMITY DEFAULT DISTANCE UNIT.LABLE" description="DISTANCE UNIT.DES" >	
				<option value="miles">Miles</option>				
				<option value="kms">Kms</option>
			</param>
			<param name="xiusProximityGmapZoom" type="list" label="DEFAULT ZOOM LEVEL FOR GOOGLE MAP.LABEL" description="DEFAULT ZOOM LEVEL FOR  GOOGLE MAP.DESC">
				<option value="2">2</option>
				<option value="4">4</option>
				<option value="6">6</option>
				<option value="8">8</option>
				<option value="10">10</option>
				<option value="12">12</option>
				<option value="14">14</option>
				<option value="16">16</option>
				<option value="18">18</option>
				<option value="20">20</option>				
			</param>								
	</params>
</config>