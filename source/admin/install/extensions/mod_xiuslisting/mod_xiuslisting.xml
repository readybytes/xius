<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>XiusListing</name>
	<version>@global.version@.@svn.lastrevision@</version>
    	<creationDate>Jan 2010</creationDate>
    	<author>JoomlaXi.com</author>
    	<authorEmail>shyam@joomlaxi.com</authorEmail>
    	<authorUrl>http://www.joomlaxi.com</authorUrl>
    	<copyright>2009 JoomlaXi.com</copyright>
    	<copyrightHolder>JoomlaXi.com</copyrightHolder>
    	<license>GNU General Public License v2</license>
	<description>Displays Userlisting</description>
	<files>
		<file module="mod_xiuslisting">mod_xiuslisting.php</file>
		<file>helper.php</file>
		<file>css/xius_list.css</file>
		<file>css/xius_list.css</file>
		<file>index.html</file>		
		<file>css/index.html</file>
	</files>
	<params addpath="/components/com_xius/elements">
		<param name="moduleclass_sfx" type="xiustext" default="" label="COM_XIUS_MODULE_CLASS_SUFFIX" description="COM_XIUS_PARAMXIUSMODULECLASSSUFFIX" />
	</params>
	
<!-- for joomla 1.6-->
<!-- Add fields to the parameters object for the layout. -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field  name="moduleclass_sfx" 
						type="text" default="" 
						label="COM_XIUS_MODULE_CLASS_SUFFIX" description="COM_XIUS_PARAMXIUSMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
</extension>
