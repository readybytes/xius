<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Xius Search Panel</name>
 	<version>@global.version@.@svn.lastrevision@</version>
    	<creationDate>Jan 2010</creationDate>
    	<author>JoomlaXi.com</author>
    	<authorEmail>shyam@joomlaxi.com</authorEmail>
    	<authorUrl>http://www.joomlaxi.com</authorUrl>
    	<copyright>2009 JoomlaXi.com</copyright>
    	<copyrightHolder>JoomlaXi.com</copyrightHolder>
    	<license>GNU General Public License v2</license>
	<description>Displays Advance Search</description>
	<languages>
		<language tag="en-GB">en-GB.mod_xiussearchpanel.ini</language>
	</languages>
	<files>
		<file module="mod_xiussearchpanel">mod_xiussearchpanel.php</file>
		<file>index.html</file>
		<file>helper.php</file>
		<file>mod_xiussearchpanel.xml</file>
		<file>css/mod_xiussearchpanel_ver.css</file>
		<file>css/mod_xiussearchpanel_hz.css</file>
		<file>css/index.html</file>
		<file>tmpl/default.php</file>
		<file>tmpl/index.html</file>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="COM_XIUS_MODULE_CLASS_SUFFIX" description="COM_XIUS_PARAMXIUSMODULECLASSSUFFIX" />
		<param name="xius_info_range" type="text" default="All" label="COM_XIUS_INFORMATION_RANGE_LABEL" description="COM_XIUS_INFORMATION_RANGE_DESC" />
		<param name="xius_layout" type="list" default="horizontal" label="COM_XIUS_LAYOUT_LABEL" description="COM_XIUS_LAYOUT_DESC">
			<option value="horizontal">Horizontal</option>
			<option value="vertical">Vertical</option>
	</param>
</params>
	
	<!-- for joomla 1.6-->
	<!-- Add fields to the parameters object for the layout. -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="COM_XIUS_MODULE_CLASS_SUFFIX" description="COM_XIUS_PARAMXIUSMODULECLASSSUFFIX" />
				<field name="xius_info_range" type="text" default="All" label="COM_XIUS_INFORMATION_RANGE_LABEL" description="COM_XIUS_INFORMATION_RANGE_DESC" />
				<field name="xius_layout" type="list" default="horizontal" label="COM_XIUS_LAYOUT_LABEL" description="COM_XIUS_LAYOUT_DESC">
					<option value="horizontal">Horizontal</option>
					<option value="vertical">Vertical</option>
				</field>	
			</fieldset>
		</fields>
	</config>
</extension>

