<?xml version="1.0"?>
<extension version="2.5" type="plugin" group="xius" method="upgrade">
  <name>XiUS Dynamic filtering of XiPT-fields Plugin</name>
  <version>@global.version@.@svn.lastrevision@</version>
  <creationDate>Sept 2010</creationDate>
  <author>Team Joomlaxi</author>
  <authorEmail>shyam@joomlaxi.com</authorEmail>
  <authorUrl>http://www.joomlaxi.com/</authorUrl>
  <copyright>@Joomlaxi</copyright>
  <license>GNU GPL v2.0</license>
  <description>XIUS XiProfileType Fields Selection Plugin</description>
  <files>  	
	<filename plugin="xipt_fieldselection">xipt_fieldselection.php</filename>
	<folder>xipt_fieldselection</folder>
 </files>

<params>
<param name="xiusSetInfo" type="xiusradio" default="0" label="Apply Filtering on:" description="Apply filtering on base/dependent/both informations">
			<option value="0">Base</option>
			<option value="1">Dependent</option>
			<option value="2">Both</option>
</param>
</params>
<config>
<fields name="params">
	<fieldset name="basic">
		<field name="xiusSetInfo" type="radio" default="0" label="Apply Filtering on:" description="Apply filtering on base/dependent/both informations">
		    <option value="0">Base</option>
			<option value="1">Dependent</option>
			<option value="2">Both</option>
		</field>
   </fieldset>
</fields>
</config>
</extension>
