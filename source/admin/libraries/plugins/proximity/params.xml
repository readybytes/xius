<?xml version="1.0" encoding="utf-8"?>
<config>
	<params addpath="/administrator/components/com_xius/libraries/plugins/proximity/elements" >
	
		<param name="xius_proximity_encoding" type="radio" default="Database"  label="USER'S DATA ENCODING THROUGH.LABEL" description="USER'S DATA ENCODING THROUGH.DESC" >
			<option value="Information">Information</option>
			<option value="Google">Google API</option>
			<option value="Database">I have Geocoding Table</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		
		<param name="@spacer" type="spacer" default="If Information is selected above then fill Latitude and Longitude Information" label="" description="" />
			<param name="xius_proximity_latitude" type="info" default="0"  label="LATITUDE.LABEL" description="LATITUDE.DESC" addnone="true"/>
			<param name="xius_proximity_longitude" type="info" default="0"  label="LONGITUDE.LABEL" description="LONGITUDE.DESC" addnone="true"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
				
		
		<param name="@spacer" type="spacer" default="If Google API or Geocodin Table option is selected " description="" />
			<param name="xius_proximity_country" type="info" default="0"  label="COUNTRY.LABEL" description="COUNTRY.DESC"/>
			<param name="xius_proximity_zipcode" type="info" default="-1"  label="ZIPCODE.LABEL" description="ZIPCODE.DESC" addnone="true"/>
			<param name="xius_proximity_state" type="info" default="-1"  label="STATE.LABEL" description="STATE.DESC" addnone="true"/>
			<param name="xius_proximity_city" type="info" default="0"  label="CITY.LABEL" description="CITY.DESC" addnone="true"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<!--
		<param name="@spacer" type="spacer" default="" label="" description="" />
			<param name="xius_proximity_db" type="radio" default="1" label="DO YOU HAVE GEOCODING TABLE.LABEL" description="GEOCODING TABLE.DESC">
				<option value="0">No, I don't</option>
				<option value="1">Yes, I have</option>
			</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		-->
		
		<param name="@spacer" type="spacer" default="If you don't have Geocoding Table" label="" description="" />
			<param name="xius_gmap_key" type="text" default="" label="GOOGLE API KEY.LABEL" description="GOOGLE API KEY.DESC"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="@spacer" type="spacer" default="If you have Geocoding Table" label="" description="" />
			<param name="xius_proximity_table" type="text" default="" label="TABLE NAME FOR LATITUDE AND LONGITUDE.LABEL" description="TABLE NAME FOR LATITUDE AND LONGITUDE.DESC"/>
			<param name="xius_proximity_zipcode_column" type="text" default="" label="COLUMN NAME FOR ZIPCODE.LABEL" description="COLUMN NAME FOR ZIPCODE.DESC"/>
			<param name="xius_proximity_country_column" type="text" default="" label="COLUMN NAME FOR COUNTRY.LABEL" description="COLUMN NAME FOR COUNTRY.DESC"/>
			<param name="xius_proximity_state_column" type="text" default="" label="COLUMN NAME FOR STATE.LABEL" description="COLUMN NAME FOR STATE.DESC"/>
			<param name="xius_proximity_city_column" type="text" default="" label="COLUMN NAME FOR CITY.LABEL" description="COLUMN NAME FOR CITY.DESC"/>			
			<param name="xius_proximity_lat_column" type="text" default="" label="COLUMN NAME FOR LATITUDE.LABEL" description="COLUMN NAME FOR LATITUDE.DESC"/>
			<param name="xius_proximity_long_column" type="text" default="" label="COLUMN NAME FOR LONGITUDE.LABEL" description="COLUMN NAME FOR LONGITUDE.DESC"/> 
