<?xml version="1.0" encoding="utf-8"?>
<config>
	<params addpath="/administrator/components/com_xius/elements" >
		<param name="@spacer" type="spacer" default="Google API Configuration " description="" />
			<param name="xius_proximity_country" type="info" default="-1"  label="COUNTRY.LABEL" description="COUNTRY.DESC"/>
			<param name="xius_proximity_zipcode" type="info" default="-1"  label="ZIPCODE.LABEL" description="ZIPCODE.DESC" addnone="true"/>
			<param name="xius_proximity_state" type="info" default="-1"  label="STATE.LABEL" description="STATE.DESC" />
			<param name="xius_proximity_city" type="info" default="-1"  label="CITY.LABEL" description="CITY.DESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		
		<param name="@spacer" type="spacer" default="If you don't have Geocoding Table" label="" description="" />
			<param name="xius_gmap_key" type="text" default="" label="GOOGLE API KEY.LABEL" description="GOOGLE API KEY.DESC"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="@spacer" type="spacer" default="Default Location Configuration" description="" />
			<param name="xius_default_location" type="Radio" label="XIUS PROXIMITY LOCATION.LABLE" description="LOCATION.DES" default="none" >	
				<option value="none">none</option>				
				<option value="googlemap">Google Map</option>
				<option value="addressbox">Address</option>
				<option value="mylocation">My Location</option>
			</param>		
			<param name="xiusProximityDefaultLat" type="text" default="28.635308" label="DEFAULT GOOGLE MAP LATITUDE FOR PROXIMITY SEARCH.LABEL" description="DEFAULT GOOGLE MAP LATITUDE FOR PROXIMITY SEARCH.DESC" />
			<param name="xiusProximityDefaultLong" type="text" default="77.22496" label="DEFAULT GOOGLE MAP LONGITUDE FOR PROXIMITY SEARCH.LABEL" description="DEFAULT GOOGLE MAP LONGITUDE FOR PROXIMITY SEARCH.DESC" />						
			<param name="xiusProximityGmapZoom" type="list" >
				<option value="2">2</option>
				<option value="4">4</option>
				<option value="6">6</option>
				<option value="8">8</option>
				<option value="10">10</option>
				<option value="12">12</option>
				<option value="14">14</option>
				<option value="16">16</option>
				<option value="18">18</option>
				<option value="20">20</option>				
			</param>		 
	</params>
</config>